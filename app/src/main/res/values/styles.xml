<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="copper" parent="AppTheme">
        <item name="colorPrimary">@color/copper</item>
        <item name="colorPrimaryDark">@color/copper</item>
        <item name="android:navigationBarColor">@color/copper</item>
        <item name="colorAccent">@color/copper</item>
    </style>

    <style name="palladium" parent="AppTheme">
        <item name="colorPrimary">@color/palladium</item>
        <item name="colorPrimaryDark">@color/palladium</item>
        <item name="android:navigationBarColor">@color/palladium</item>
        <item name="colorAccent">@color/palladium</item>
    </style>

    <style name="platinum" parent="AppTheme">
        <item name="colorPrimary">@color/platinum</item>
        <item name="colorPrimaryDark">@color/platinum</item>
        <item name="android:navigationBarColor">@color/platinum</item>
        <item name="colorAccent">@color/platinum</item>
    </style>

    <style name="silver" parent="AppTheme">
        <item name="colorPrimary">@color/silver</item>
        <item name="colorPrimaryDark">@color/silver</item>
        <item name="android:navigationBarColor">@color/silver</item>
        <item name="colorAccent">@color/silver</item>
    </style>

    <style name="titanium" parent="AppTheme">
        <item name="colorPrimary">@color/titanium</item>
        <item name="colorPrimaryDark">@color/titanium</item>
        <item name="android:navigationBarColor">@color/titanium</item>
        <item name="colorAccent">@color/titanium</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/black</item>
    </style>
</resources>
