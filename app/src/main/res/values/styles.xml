<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="copper" parent="AppTheme">
        <item name="colorPrimary">@color/copper</item>
        <item name="colorPrimaryDark">@color/copper</item>
        <item name="android:navigationBarColor">@color/copper</item>
        <item name="colorAccent">@color/copper</item>
    </style>

    <style name="palladium" parent="AppTheme">
        <item name="colorPrimary">@color/palladium</item>
        <item name="colorPrimaryDark">@color/palladium</item>
        <item name="android:navigationBarColor">@color/palladium</item>
        <item name="colorAccent">@color/palladium</item>
    </style>

    <style name="platinum" parent="AppTheme">
        <item name="colorPrimary">@color/platinum</item>
        <item name="colorPrimaryDark">@color/platinum</item>
        <item name="android:navigationBarColor">@color/platinum</item>
        <item name="colorAccent">@color/platinum</item>
    </style>

    <style name="silver" parent="AppTheme">
        <item name="colorPrimary">@color/silver</item>
        <item name="colorPrimaryDark">@color/silver</item>
        <item name="android:navigationBarColor">@color/silver</item>
        <item name="colorAccent">@color/silver</item>
    </style>

    <style name="titanium" parent="AppTheme">
        <item name="colorPrimary">@color/titanium</item>
        <item name="colorPrimaryDark">@color/titanium</item>
        <item name="android:navigationBarColor">@color/titanium</item>
        <item name="colorAccent">@color/titanium</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/modal_bottom_round_corners</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/zxing_transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background_with_border</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="QRTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
